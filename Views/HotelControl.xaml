                                                    </Path.Data>
                                                </Path>
                                            </Canvas>
                                        </Canvas>
                                    </Viewbox>
                                </DockPanel>

                                <Border Grid.Row="1"
                                       Background="{DynamicResource ForegroundColor}"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Stretch"
                                       Height="2"
                                       Margin="6,0,6,0"
                                       CornerRadius="2">
                                </Border>
                                <Grid Grid.Row="1"
                                       HorizontalAlignment="Stretch">
                                    
                                    <!--Country-->
                                    <StackPanel
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left">
                                        <Label Foreground="{DynamicResource ForegroundColor}"
                                           Margin="5,5,0,0">
                                            <Label.Content>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0}, {1}">
                                                            <Binding Path="Country"></Binding>
                                                            <Binding Path="City"></Binding>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Label.Content>
                                        </Label>
                                        <Label Content="{Binding Address}"
                                           Foreground="{DynamicResource ForegroundColor}"
                                           Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <!--Phone-->
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right"
                                                Margin="0,10,7,0">
                                        <Image Height="20" Width="20" Source="/Resources/icons8-phone-100.png"/>
                                        <TextBlock Text="{Binding Phone}"
                                           Foreground="Gray"
                                           TextDecorations="Underline"/>
                                    </StackPanel>
                                    
                                </Grid>

                                <StackPanel Orientation="Horizontal"
                                        Grid.Row="2"
                                        HorizontalAlignment="Right" Margin="5,10,5,5">
                                    <Button x:Name="ExtraButton" 
                                            Content="Подробнее"
                                            Width="80"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.GetHotelCommand}">
                                    </Button>
                                    <Button Content="Удалить"
                                            Width="80"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.DeleteHotelCommand}"
                                            Margin="15,0,0,0">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="TbStyles" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                BorderThickness="0"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ContentControl Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="ToggleButton.IsChecked" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Image Source="/Resources/icons8-sort-amount-up-32.png"
                                               Stretch="None"></Image>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="ToggleButton.IsChecked" Value="False">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Image Source="/Resources/icons8-ascending-sorting-32.png"
                                               Stretch="None"></Image>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:HotelViewModel></vm:HotelViewModel>
    </UserControl.DataContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--Title-->
        <Label Grid.Row="0" Content="Отели"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center" 
               VerticalAlignment="Top"
               FontSize="34"
               Foreground="White"></Label>
        <Button Grid.Row="0" Content="Добавить отель"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Height="30" Width="150"
                Margin="10"
                FontSize="16"
                Foreground="White"
                BorderBrush="White"
                Command="{Binding AddHotelCommand}"
                Style="{StaticResource BackgroundButton}"/>

        <!--Sort-->
        <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
                    <Label Content="Сортировка:"
                       Foreground="White"
                       VerticalContentAlignment="Center"
                       FontSize="16"
                       Margin="5,0,0,0"/>
                    <ToggleButton Style="{StaticResource TbStyles}"
                                  Background="Transparent"
                                  Margin="5,0,0,0"
                                  Command="{Binding SortCommand}"/>
                    <ComboBox SelectedIndex="0"
                      Width="140"
                      FontSize="16"
                      SelectedItem="{Binding CurrentSort, Mode=TwoWay}"
                      Style="{StaticResource BackgroundComboBox}"
                      IsEditable="False"
                              Height="35">
                        <ComboBox.Resources>
                            <Style TargetType="Label">
                                <Setter Property="Foreground" Value="White"></Setter>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBoxItem>
                            <Label Content="Название" ></Label>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Label Content="Адрес"></Label>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0">
                    <Label Content="Страна: "
                   Foreground="White"
                   VerticalContentAlignment="Center"
                   FontSize="16"/>
                    <ComboBox ItemsSource="{Binding Countries}"
                          SelectedItem="{Binding CurrentCountry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="130"
                          FontSize="16"
                          Style="{StaticResource BackgroundComboBox}"
                          IsEditable="False"
                              Height="35">
                        <ComboBox.Resources>
                            <Style TargetType="Label">
                                <Setter Property="Foreground" Value="White"></Setter>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding}"></Label>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Label Content="Название: "
                   Foreground="White"
                   FontSize="16"
                       Margin="20,0,0,0"
                   VerticalContentAlignment="Center"/>
                <Grid>
                    <TextBox Text="{Binding NameSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="240"
                         FontSize="16"
                         BorderBrush="White"
                         Foreground="White"
                         CaretBrush="White"
                             Height="35"
                             x:Name="SearchTb"/>
                    <TextBlock 
                Margin="10,10" 
                Text="Найти"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                FontSize="16"
                Foreground="White"
                        Opacity=".8">
                        <TextBlock.Visibility>
                            <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                                <Binding ElementName="SearchTb" Path="Text.IsEmpty" />
                                <Binding ElementName="SearchTb" Path="IsFocused" />
                            </MultiBinding>
                        </TextBlock.Visibility>
                    </TextBlock>
                </Grid>
                
            </StackPanel>
            <TextBlock Text="{Binding Hotels.Count, Converter={StaticResource SearchConverter}}"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,10,0,0"
                       HorizontalAlignment="Center">

                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource ResultVisibilityConverter}">
                        <Binding ElementName="SearchTb" Path="Text.IsEmpty"/>
                        <Binding ElementName="SearchTb" Path="IsFocused"/>
                    </MultiBinding>
                </TextBlock.Visibility>

            </TextBlock>
        </StackPanel>
        <ListView Grid.Row="2"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  BorderThickness="0"
                  ItemsSource="{Binding Hotels}"
                  Margin="0,30,0,0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  SelectedItem="{Binding CurrentHotel}"
                  Style="{DynamicResource ListViewStyle}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"></WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</UserControl>
