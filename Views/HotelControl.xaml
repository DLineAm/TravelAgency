                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <DockPanel
                                        HorizontalAlignment="Stretch">
                                    <Label Grid.Row="0"
                                           DockPanel.Dock="Left"
                                       Content="{Binding Name}"
